doctype html
html
  head
    meta(charset='utf-8')
    title eCommerce
    link(rel='stylesheet', href='/css/style.css')
  body(style='background-color:#{item.color};')
    h1 eCommerce
    nav
      ul
        li: a(href='/') Home
        li: a(href='/about') About
        li: a(href='/faq') Faq
    .item
      ul
        li= item.name
        li length: #{item.dimensions.l}
        li width: #{item.dimensions.w}
        li height: #{item.dimensions.h}
        li weight: #{item.weight}
      form(method='post', action='/items/#{item._id}')
        input(type='hidden', name='_method', value='delete')
